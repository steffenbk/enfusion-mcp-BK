{
  "name": "enfusion-mcp",
  "version": "0.6.1",
  "type": "module",
  "description": "MCP server for Arma Reforger / Enfusion engine modding â€” create mods from natural language",
  "bin": {
    "enfusion-mcp": "./dist/index.js"
  },
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "dev": "tsx src/index.ts",
    "scrape": "tsx scripts/scrape.ts",
    "scrape:remote": "tsx scripts/scrape.ts --source remote",
    "scrape:local": "tsx scripts/scrape.ts --source local",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
