    "playwright": "^1.58.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "data",
    "mod",
    "README.md",
    "LICENSE"
  ],
  "repository": {
